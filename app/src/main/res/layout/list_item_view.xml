<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@color/tan_background">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height" />

    <LinearLayout
        android:id="@+id/layoutHolderView"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_item_height"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="@color/category_numbers"
        android:paddingLeft="@dimen/list_item_text_padding"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/image"
        android:layout_alignWithParentIfMissing="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:id="@+id/miwok_word"
            android:text="lato"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:id="@+id/english_word"
            android:text="one"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium" />
    </LinearLayout>

    <ImageView
        android:id="@+id/play_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_weight="1"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/list_item_text_padding"
        android:src="@mipmap/ic_play_arrow" />

</RelativeLayout>